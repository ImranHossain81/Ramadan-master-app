<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/bgg33"
    android:orientation="vertical"

    android:weightSum="10"
    tools:context=".Tojbi">






    <TextView
    android:layout_marginTop="10dp"
        android:layout_gravity="right"
        android:id="@+id/reset"
        android:textStyle="bold"
        android:layout_width="70dp"
        android:layout_height="0dp"
       android:textColor="@color/colorPrimary"
        android:layout_weight="1"


        android:text="Reset"
        android:textAllCaps="false"
        android:textSize="17dp" />


    <TextView
        android:id="@+id/text_to"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_gravity="center"

        android:layout_marginTop="10dp"
        android:layout_weight="3.8"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp" />


    <Button

        android:id="@+id/button_to"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"

        android:layout_marginTop="30dp"
        android:layout_weight="3.2"
        android:background="#3BFF9100"
        android:drawableLeft="@drawable/click1"
        android:drawableRight="@drawable/click1"
        android:text="Start count"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="18dp" />



    <TextView
       android:layout_gravity="right"
        android:id="@+id/manual"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_marginLeft="15dp"

        android:layout_marginTop="20dp"
        android:layout_weight="1"
    android:textColor="@color/ic_launcher_background"
        android:text="Fixed count"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="18dp" />


</LinearLayout>